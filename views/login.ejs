<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login - EcoShare</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
<%- include('partials/header_simple', { title: 'EcoShare' }) %>
  <div class='container glass login-container scroll-fade'>
    <form id="loginForm" method="post" action="/login">
      <div>
        <label>Usu√°rio</label>
        <input type="text" name="username" required>
      </div>
      <div>
        <label>Senha</label>
        <input type="password" name="password" required>
      </div>
      <div class="login-buttons">
        <button type="submit">Entrar</button>
        <a href="/auth/google" class="google-btn" role="button">
          <img src="https://placehold.co/18x18" alt="Google">
          <span>Entrar com Google</span>
        </a>
      </div>
    </form>
    <div id="loginError" style="color:red;"></div>
  </div>
<%- include('partials/footer') %>
  <script src="/app.js"></script>
</body>
</html>
